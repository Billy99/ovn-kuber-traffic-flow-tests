---
apiVersion: v1
kind: Service
metadata:
  name: ft-http-service-nodeport-host-v4
  labels:
    pod-name: ft-http-service-nodeport-host-v4
spec:
  type: NodePort
  ports:
    - name: ft-http-server-host-node-v4-{{ http_clusterip_host_svc_port }}
      protocol: TCP
      port: {{ http_clusterip_host_svc_port }}
      nodePort: {{ http_nodeport_host_svc_port }}
  selector:
    pod-name: ft-http-server-host-v4
---
apiVersion: v1
kind: Service
metadata:
  name: ft-iperf-service-nodeport-host-v4
  labels:
    pod-name: ft-iperf-service-nodeport-host-v4
spec:
  type: NodePort
  ports:
    - name: ft-iperf-server-host-node-v4-{{ iperf_clusterip_host_svc_port }}
      protocol: TCP
      port: {{ iperf_clusterip_host_svc_port }}
      nodePort: {{ iperf_nodeport_host_svc_port }}
  selector:
    pod-name: ft-iperf-server-host-v4
